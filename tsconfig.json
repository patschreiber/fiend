{
  "target": "es2015",
  "files": [
    "./src/engine/types/globals.d.ts",
    "./src/engine/types/components.d.ts",
    "./src/engine/types/gameobjects.d.ts",
    "./src/engine/types/events.d.ts",
    "./src/engine/types/rendering.d.ts"
  ],
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./build", "**/*.spec.ts"],
  "typeRoots": ["node_modules/@types", "src/engine/types"],
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "charset": "utf8",
    "composite": true,
    "declarationDir": "./src/engine/types",
    "diagnostics": true,
    "esModuleInterop": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "keyofStringsOnly": true,
    "listFiles": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo"
  }
}

{
  "compilerOptions": {
    "outDir": "./dist/",        // path to output directory
    "sourceMap": true,          // allow sourcemap support
    "strictNullChecks": false,   // enable strict null checks as a best practice
    "module": "es6",            // specify module code generation
    "target": "es2015",            // specify ECMAScript target version
    "allowJs": true             // allow a partial TypeScript and JavaScript codebase
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"],
  "files": [
    "src/main.ts",
    "src/entities/Enemy.ts",
    "src/engine/FiendGame.ts",
    "src/engine/Renderer.ts",
    "src/atlases/MapBase.ts",
    "src/atlases/Overworld.ts",
    "src/exceptions/MapDefinitionException",
    "src/exceptions/MapException"
  ] 
}